%TEMPLATE_MODE HTML5
# ------------ separator comment -----------
%CONTEXT
book = new testdata.Book()
book.id=1000000
binding = {'book'}
# ------------------------------------------
%MESSAGES
testdata.Book.title=Title
nurl.book.edit=edit/$'{'book_id'}'
# ------------------------------------------
%INPUT
<!DOCTYPE html>
<html>
  <body th:with="book_id=${book.id}">
      <form th:object="${book}" th:href="@{|__#{nurl.book.edit}__|(furtherParam='foo')}">
      </form>
  </body>
</html>
