%TEMPLATE_MODE HTML5
# ------------ separator comment -----------
%CONTEXT
book = new testdata.Book()
book.id=1000000
binding = {'book'}
# ------------------------------------------
%MESSAGES
testdata.Book.title=Title
url.book.edit=edit/{0,number,##}
# ------------------------------------------
%INPUT
<!DOCTYPE html>
<html>
  <body>
      <form  th:with="book_id=${book.id}" th:object="${book}" th:href="@{#{url.book.edit(${book_id})}(furtherParam='foo')}">
      </form>
  </body>
</html>
# ------------------------------------------

%OUTPUT
<!DOCTYPE html>
<html>
  <body>
      <form href="edit/1000000?furtherParam=foo">
      </form>
  </body>
</html>

